<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('./partials/head') %>
    <title>Homepage</title>
</head>
<body>
   <%-include('./partials/nav')  %>

   <div class="container mx-5 row row-cols-4 ">
    <% blogs.forEach(blog => { %>
      <div class="g-4 ">
      <div class="card " style="width: 10rem;">
        <img src="<%= blog.coverImageURL %>" 	class="card-img-top img-fit" alt="d">
        <div class="card-body">
          <h7 class="card-title "><%= blog.title %></h7>
        
          <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
        </div>
      </div>
     </div>

    <% }) %>
   </div>

   <%-include('./partials/scripts')  %>
</body>
</html>